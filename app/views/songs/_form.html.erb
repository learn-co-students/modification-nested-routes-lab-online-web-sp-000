<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <% if @song.artist.nil? %>
  <%= f.select :artist_id, options_from_collection_for_select(Artist.all, :id, :name) %>
  <%end%>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
